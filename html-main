<script>
const $ = id => document.getElementById(id)

$("name").innerText = CONFIG.profile.name
$("role").innerText = CONFIG.profile.role
$("desc").innerText = CONFIG.profile.description
$("avatar").src = CONFIG.profile.avatar

$("stat-games").innerText = CONFIG.games.length
$("stat-ccu").innerText = CONFIG.games.reduce((a,g)=>a+g.ccu,0).toLocaleString()
$("stat-visits").innerText = CONFIG.games.reduce((a,g)=>a+g.visits,0).toLocaleString()
$("stat-rating").innerText = CONFIG.stats.rating + " ★"

CONFIG.whyHireMe.forEach(t=>{
  const li=document.createElement("li")
  li.innerText=t
  $("why").appendChild(li)
})

Object.entries(CONFIG.contact).forEach(([k,v])=>{
  const a=document.createElement("a")
  a.href=v
  a.target="_blank"
  a.className="block text-blue-400 hover:underline"
  a.innerText=k
  $("contact").appendChild(a)
ո՜})

CONFIG.about.code.forEach(l=>{
  const d=document.createElement("div")
  d.className="code-line"
  d.innerText=l
  $("about-code").appendChild(d)
})

CONFIG.about.story.forEach(p=>{
  const el=document.createElement("p")
  el.innerText=p
  $("about-story").appendChild(el)
})

CONFIG.about.stats.forEach(s=>{
  const el=document.createElement("div")
  el.className="card p-6 text-center"
  el.innerHTML=`<div class="text-3xl font-bold text-blue-400">${s.value}</div><div class="text-gray-400 mt-2">${s.label}</div>`
  $("about-stats").appendChild(el)
})

const c=document.getElementById("bg"),ctx=c.getContext("2d")
let w,h,p=[]
function resize(){w=c.width=innerWidth;h=c.height=innerHeight}
resize();onresize=resize
for(let i=0;i<80;i++)p.push({x:Math.random()*w,y:Math.random()*h,v:Math.random()*0.4+0.1})
function draw(){
  ctx.clearRect(0,0,w,h)
  p.forEach(o=>{
    o.y+=o.v;if(o.y>h)o.y=0
    ctx.fillStyle="rgba(59,130,246,.15)"
    ctx.beginPath()
    ctx.arc(o.x,o.y,1.5,0,Math.PI*2)
    ctx.fill()
  })
  requestAnimationFrame(draw)
}
draw()

const m=document.getElementById("music")
m.volume=.15
document.body.addEventListener("click",()=>m.play(),{once:true})
</script>

